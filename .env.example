# Database
DATABASE_URL=postgresql://user:password@HOST:5432/simple_cmms

# GCS
GCS_BUCKET=your-gcs-bucket
GCP_SERVICE_ACCOUNT_JSON=/path/to/service-account.json

# Firebase Admin SDK (for token verification)
# Option 1: Provide JSON credentials as a string (recommended for CI/Cloud Run)
FIREBASE_ADMIN_CREDENTIALS_JSON=
# Option 2: Provide path to credentials file (for local development)
FIREBASE_ADMIN_CREDENTIALS_PATH=

# App
SECRET_KEY=changeme
ALLOW_ORIGINS=http://localhost:3000

# Admin configuration (comma-separated emails or UIDs)
ADMIN_EMAILS=admin@example.com
ADMIN_UIDS=
